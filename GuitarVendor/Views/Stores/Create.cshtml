@{
  Layout = "_Layout";
}

@model GuitarVendor.Models.Store
@using GuitarVendor.Models

<h4>Add a new store</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class="text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Description, "", new {@class="text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  <br>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br>
  <br>
  <input type="submit" value="Add new store" class="btn btn-primary"/>
}
<br>
<p>@Html.ActionLink("View all stores", "Index")</p>