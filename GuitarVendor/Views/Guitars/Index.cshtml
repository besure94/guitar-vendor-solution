@{
  Layout = "_Layout";
}

@using GuitarVendor.Models;
@model List<GuitarVendor.Models.Guitar>;

<h1>Guitars</h1>

@if (@Model.Count == 0)
{
  <h3>No guitars have been added yet.</h3>
}
else
{
  <ul>
    @foreach (Guitar guitar in Model)
    {
      <li>@Html.ActionLink($"{guitar.Year}_{guitar.Brand}_{guitar.Model}", "Details", new { id = guitar.GuitarId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new guitar", "Create")</p>
<p>@Html.ActionLink("View store list", "Index", "Stores")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>